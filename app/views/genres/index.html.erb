<h1>ジャンル新規投稿</h1>
<%= form_for(@genre) do |f| %>
<%= f.label :name, '名前' %>
<%= f.text_field :name %>
<%= f.submit '作成' %>
<% end %>

<h1>ジャンル一覧</h1>
<% @genres.each do |genre| %>
<p><%= genre.name %></p>
<%= link_to "タスクを追加する", new_task_path %>
<%= link_to "削除", genre_path(genre.id), method: :delete, data: {confirm: "このタスクを削除しますか？"} %>
<%= link_to "編集", edit_genre_path(genre.id) %>
<% end %>